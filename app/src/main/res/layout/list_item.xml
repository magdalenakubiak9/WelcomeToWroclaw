<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/attraction_image"
        android:src="@drawable/events_bazaar"
        style="@style/ListItemImageStyle"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/list_item_image_margin"
        android:orientation="vertical">
        <TextView
            android:text="@string/events_bazaar"
            android:id="@+id/attraction_name"
            style="@style/ListItemTextStyle"/>
        <TextView
            android:text="@string/events_bazaar_description"
            android:id="@+id/attraction_description"
            style="@style/ListItemDescriptionTextStyle"/>
    </LinearLayout>

</LinearLayout>